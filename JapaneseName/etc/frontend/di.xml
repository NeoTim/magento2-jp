<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Customer\Block\Widget\Name">
        <plugin name="kanaFieldsTemplate" type="Magento\JapaneseName\Plugin\Customer\Block\Widget\Name"/>
        <arguments>
            <argument name="data" xsi:type="array">
                <item name="kana" xsi:type="object">Magento\JapaneseName\Block\KanaFormViewModel</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Customer\Block\Account\Dashboard\Info">
        <plugin name="kana" type="Magento\JapaneseName\Plugin\Customer\Block\Account\Dashboard\InfoNameKana"/>
    </type>
    <type name="Magento\Customer\Block\Address\Edit">
        <plugin name="copyCustomerKanaAttributes" type="Magento\JapaneseName\Plugin\Customer\Block\Address\Edit\CopyKanaToNewAddress"/>
    </type>
    <type name="Magento\Checkout\Block\Onepage">
        <arguments>
            <argument name="layoutProcessors" xsi:type="array">
                <item name="kanaFields" xsi:type="object">Magento\JapaneseName\Block\Checkout\KanaFieldsProcessor</item>
            </argument>
        </arguments>
    </type>
</config>